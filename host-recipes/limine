name=limine
from_source=limine
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
imagedeps="nasm gcc mtools"

configure() {
  ${source_dir}/configure \
    --prefix=${prefix} \
    --enable-all \
    --disable-uefi-aarch64
}

build() {
  make -j${parallelism}
}

install() {
  make DESTDIR=${dest_dir} install-strip
}
