name=mlibc
from_source=mlibc
revision=1
imagedeps="meson ninja"
hostdeps="gcc pkg-config libgcc-binaries"
deps="linux-headers mlibc-headers cxxshim frigg"

configure() {
    LDFLAGS="-Wl,/usr/local/libgcc-binaries/libgcc-${common_target_arch}.a" \
  meson setup \
    --cross-file ${base_dir}/misc/cross_file.txt \
    --prefix=${prefix} \
    --libdir=lib \
    --buildtype=debugoptimized \
    -Dmlibc_no_headers=true \
    -Ddisable_crypt_option=true \
    -Ddisable_iconv_option=true \
    -Ddisable_intl_option=true \
    -Dlinux_kernel_headers=${sysroot_dir}${prefix}/include \
    -Ddisable_libgcc_dependency=true \
    ${source_dir}
}

build() {
  ninja
}

install() {
  DESTDIR=${dest_dir} ninja install
}
