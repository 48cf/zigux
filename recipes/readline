name=readline
from_source=readline
revision=1
hostdeps="gcc"
deps="mlibc ncurses"

configure() {
  ${source_dir}/configure \
    --host=${common_triple} \
    --prefix=${prefix} \
    --disable-static \
    --enable-multibyte
}

build() {
  make -j${parallelism}
}

install() {
  make install DESTDIR="${dest_dir}"
}
