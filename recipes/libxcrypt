name=libxcrypt
from_source=libxcrypt
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="mlibc libgcc libstdc++"

configure() {
  ${source_dir}/configure \
    --host=${common_target} \
    --prefix=${prefix} \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-obsolete-api=yes \
    --disable-xcrypt-compat-files \
    --disable-static
}

build() {
  make -j${parallelism}
}

install() {
  make DESTDIR=${dest_dir} install-strip
}
