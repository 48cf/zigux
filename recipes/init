name=init
from_source=init
revision=1
imagedeps="meson ninja"
hostdeps="gcc"
deps="core-libs"

configure() {
  meson \
    --cross-file ${base_dir}/misc/cross_file.txt \
    --prefix=${prefix} \
    --buildtype=debugoptimized \
    ${source_dir}
}

build() {
  ninja
}

install() {
  DESTDIR=${dest_dir} ninja install
}
