name=zlib
from_source=zlib
revision=1
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
    prefix=${prefix} \
    CHOST=${common_target} \
  ${source_dir}/configure
}

build() {
  make -j${parallelism}
}

install() {
  make DESTDIR=${dest_dir} install

  # Remove static libraries
  rm -rf ${dest_dir}${prefix}/lib/*.a

  ${common_target}-strip ${dest_dir}${prefix}/lib/libz.so.1.2.12
}
